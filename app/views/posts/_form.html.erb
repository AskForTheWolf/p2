<!-- Good use of view-partials -->

<!--The standard form but I added glass so you can change/update/create a glass  -->

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :ingredients %>
  <%= f.text_area :body %>
  <%= f.label :glass %>
  <%= f.text_area :glass %>
  <%= f.submit %>
<% end %>
